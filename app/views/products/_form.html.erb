<%= form_with(model: product, local: true) do |form| %>
  <div class="form-group">
    <% if product.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(product.errors.count, "error") %>
          prohibited this product from being saved:</h2>

        <ul>
          <% product.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.label :name, class: "form-label" %>
      <%= form.text_field :name, class: "form-input", id: :product_name %>
    </div>

    <div>
      <%= form.label :description, class: "form-label" %>
      <%= form.text_field :description, class: "form-input", id: :product_description, :size => "50x10"%>
    </div>

    <div>
      <%= form.label :price, class: "form-label" %>
      <%= form.text_field :price, class: "form-input", id: :product_price %>
    </div>

    <div>
      <%= form.label :image_url, class: "form-label" %>
      <%= form.text_field :image_url, class: "form-input", id: :product_image %>
    </div>

    <div>
      <%= form.submit "Submit", class: "btn btn-primary rounded-0" %>
    </div>
  </div>
<% end %>